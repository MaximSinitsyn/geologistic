<div id='request' class='row request'>
    <div class='request__col col xs-12 lg-7 xs-center'>
        <div class='request__content xs-center'>
            <div class='request__contentInner animated'
                data-scrollspy='{
                    "offset": 0, 
                    "class_in": "fadeIn",
                    "delay_in": "delay_16s"
                }'> 
                <div id='calc' class='request__wrapper'>
                    <div class='request__title text text_bal-dark text_md'>
                        Рассчитать стоимость
                    </div>
                    <div class='request__form'>
                        <div class='form'>
                            <div class='form__title text_bal-dark'>
                                Город отправки
                            </div>
                            <div class="form__row">
                                <select class='input'
                                        id='calc_city_1'
                                        data-calc_city='Москва=0=true;Ростов-на-Дону=100;Санкт-Петербург=250;Абакан=179;Анадырь=373;Анапа=113;'>
                                </select>  
                            </div>
                            <button class='form__title' style='margin: 0 auto;' data-calc_change>
